<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hwang62.cs478.proj_3.A1.MainActivity"
    android:onClick="BtnHotelsOnClick">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hotels"
            android:id="@+id/btnHotels"
            android:layout_weight="0.60"
            android:onClick="BtnHotelsOnClick" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="View and select from a list of hotels in the city of chicago"
            android:id="@+id/textView"
            android:layout_weight=".75" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restaurants"
            android:id="@+id/btnRestaurants"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".60"
            android:onClick="BtnRestaurantsOnClick" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="View and select from a list of restaurants in the city of Chicago"
            android:id="@+id/textView2"
            android:layout_weight=".75" />
    </LinearLayout>
</RelativeLayout>
