<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs478.project5.toby.playerclient.PlayerClient">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Song List"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtSongTitles"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:id="@+id/lsvSongList" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_play"
                android:id="@+id/btnPlay"
                android:onClick="PlaySong" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_pause"
                android:id="@+id/btnPause" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_media_previous"
                    android:id="@+id/btnPrev"
                    android:onClick="PrevSong"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_media_next"
                    android:id="@+id/btnNext"
                    android:onClick="NextSong" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:text="Stop"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnStop"
                    android:layout_weight="8.61" />

                <Button
                    android:text="Click to Load Songs"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnLoadSongs"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtActions"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lsvAction" />

    </LinearLayout>
</RelativeLayout>
